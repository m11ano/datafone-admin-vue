{
    "compilerOptions": {
        "outDir": "./dist/",
        "noImplicitAny": true,
        "module": "ESNext",
        "target": "es5",
        "lib": ["es2017", "dom"],
        "allowJs": true,
        "strict": true,
        "moduleResolution": "node",
        "baseUrl": ".",
        "paths": {
            "@module/*": ["./src/modules/client/*"],
            "@core/*": ["./src/modules/core/*"],
            "@/*": ["./src/*"]
        },
        "isolatedModules": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true
    },
    "ts-node": {
        "compilerOptions": {
            "module": "CommonJS"
        }
    },
    "include": ["src/**/*"],
    "exclude": [".fttemplates"]
}
